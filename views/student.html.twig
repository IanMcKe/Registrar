<html>
<head>
    <title>Student Information</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Name: {{ student.getName }}</h1>
        <h1>Enroll Date: {{ student.getDate}}</h1>

        {% if courses is not empty %}
            <p>Here are the courses the student is enrolled in:</p>
            <ul>
                {% for course in courses %}
                    <li>{{ course.getTitle }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <h4>Enroll the student in a course:</h4>

        <form action='/add_course' method='post'>
            <input id="student_id" name="student_id" type="hidden" value="{{ student.getId }}">
            <label for="course_id">Select a course</label>
            <select id='course_id' name='course_id' type='text'>
              {% for course in all_courses %}
                <option value="{{ course.getId }}"> {{ course.getTitle }} </option>
              {% endfor %}
            </select>
            <button type='submit'>Add course</button>
        </form>

        <p><a href="/student/{{ student.getId }}/edit">Edit this student</a></p>

        {# <form action="/tasks/{{ task.getId }}" method="post">
            <input name="_method" type="hidden" value="delete">
            <button type="submit" class="btn btn-danger">Delete this task</button>
        </form>

        <form action="/task_complete/{{ task.getId }}" method="post">
            <input name="_method" type="hidden" value="patch">
            <button type='submit' name="complete" value="1">Complete</button>
            <button type='submit' name="complete" value="0">Incomplete</button>
        </form>

        <form action="/">
            <button type="submit" class="btn btn-default">Return Home</button>
        </form> #}
    </div>
</body>
</html>
